{
  "compilerOptions": {
    
    "rootDir": "./src",      
    "outDir": "./dist",        
    
    "target": "ES2020",       
    "module": "commonjs",      
    "lib": ["ES2020"],         
    "esModuleInterop": true,  
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,

  
    "strict": true,           
    "noImplicitAny": true,   
  },
  "include": ["src/**/*"],     
  "exclude": ["node_modules", "dist"] 
}
